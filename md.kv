<Screen3>:
    name: 'third'
    BoxLayout:
        
        orientation: 'vertical'
        padding: 5
        spacing: 5
        Label:
            markup: True
            id: role_label
            text: '[b][i] [/i][/b]'
            color:.8,.5,.3,1
            font_size:50
        Label:
            id: qaid_label
            text: ''
            color: .2, .7, .5, 1
            font_size: 24
            opacity: 0  # Start with the qaid label hidden 
        GridLayout:
            
            spacing:1
            padding:3
            cols:2
            Button:
                markup: True
                text: "[b]Draw Role[/b]"
                background_color: 0.8, 0.2, 0.2, 1
                font_size:20
                size_hint: .9, .2
                pos_hint: {'center_x':0.5 , 'center_y':0.5 }
                on_release: root.draw_role()
            Button:
                markup: True
                text: "[b]Reset Roles[/b]"
                background_color: 0.8, 0.2, 0.2, 1
                font_size:20
                size_hint: .9, .2
                pos_hint: {'center_x':0.5 , 'center_y':0.5 }
                on_release: root.reset_roles()
            Button:
                markup: True
                
                text: "[b]Delete Drawn Role[/b]"
                background_color: 0.8, 0.2, 0.2, 1
                font_size:20
                size_hint: .9, .2
                pos_hint: {'center_x':0.5 , 'center_y':0.5 }
                on_release: root.delete_drawn_role()
            Button:
                markup: True
                text: "[b]Go Back[/b]"
                background_color: 0.8, 0.2, 0.2, 1
                font_size:20
                size_hint: .9, .2
                pos_hint: {'center_x':0.5 , 'center_y':0.5 }
                on_release:
                    app.root.current = 'second'
                    root.manager.transition.direction = 'up'
        BoxLayout:    
            orientation:'vertical'
            BoxLayout:
                orientation:'vertical'    
                Button:
                    markup: True
                    text: "[b]Exit[/b]"
                    background_color: 0.8, 0.4, 0.4, 1
                    font_size: 25
                    size_hint: .3, .015
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_release: app.stop()
            
            